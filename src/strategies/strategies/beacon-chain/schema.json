{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Strategy",
  "definitions": {
    "Strategy": {
      "title": "Strategy",
      "type": "object",
      "properties": {
        "clMultiplier": {
          "type": "string",
          "title": "Consensus Layer Multiplier",
          "examples": ["e.g. 32", "1"],
          "default": "1",
          "description": "Multiplier to convert validator balance (usually divide by this value)"
        },
        "decimals": {
          "type": "number",
          "title": "Decimals",
          "examples": ["e.g. 18"],
          "minimum": 0,
          "default": 9
        },
        "secondsPerSlot": {
          "type": "number",
          "title": "Seconds Per Slot",
          "examples": ["e.g. 5", "12"],
          "minimum": 1,
          "default": 5,
          "description": "Seconds per slot in the beacon chain (5 for Gnosis Chain, 12 for Ethereum)"
        },
        "genesisTime": {
          "type": "number",
          "title": "Genesis Time",
          "examples": ["e.g. 1638968400"],
          "minimum": 0,
          "default": 1638968400,
          "description": "Unix timestamp of the beacon chain genesis"
        }
      },
      "required": ["clMultiplier", "decimals"],
      "additionalProperties": false
    }
  }
}
